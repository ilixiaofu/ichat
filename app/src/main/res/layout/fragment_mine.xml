<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_icon"
    tools:context=".view.fragment.MineFragment">

    <TextView
        android:id="@+id/fragment_settings_TV_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#27ace0"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:text="æˆ‘"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_mine_RV"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_shap"
        app:layout_constraintBottom_toTopOf="@+id/fragment_mine_LV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_settings_TV_title"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/fragment_mine_LV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_shap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_mine_RV"
        app:layout_constraintVertical_bias="0.626" />

</android.support.constraint.ConstraintLayout>