<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true">

    <com.lxf.ichat.view.base.BaseCircleImageView
        android:id="@+id/item_list_fragment_mine_profile_CIV_head"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ichat_logo_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:outCircleColor="#ef2838"
        tools:outCircleWidth="2dp" />

    <TextView
        android:id="@+id/item_list_fragment_mine_profile_TV_nickname"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="byte int3"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_list_fragment_mine_profile_CIV_head"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_list_fragment_mine_profile_TV_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="id:12"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_fragment_mine_profile_CIV_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_list_fragment_mine_profile_CIV_head" />

</android.support.constraint.ConstraintLayout>
